{
    "name" : "gylaandrij/swiftmailer-mailgun-bundle",
    "type" : "symfony-bundle",
    "description" : "Swiftmailer Mailgun bundle",
    "keywords" : ["E-Mail", "Swiftmailer", "mailgun", "symfony"],
    "homepage" : "https://github.com/gulaandrij/swiftmailer-mailgun-bundle",
    "license" : "MIT",
    "minimum-stability" : "stable",
    "require": {
        "php": "^7.0",
        "swiftmailer/swiftmailer": "^6.0",
        "mailgun/mailgun-php": "^2.3",
        "symfony/swiftmailer-bundle": "^3.2.1",
        "symfony/dependency-injection": "^4.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.0",
        "matthiasnoback/symfony-dependency-injection-test": "^3.0",
        "nyholm/symfony-bundle-test": "^1.0",
        "php-http/guzzle6-adapter": "^1.0",
        "guzzlehttp/psr7": "^1.4",
        "symfony/framework-bundle": "^4.0",
        "doctrine/annotations": "^1.3",
        "squizlabs/php_codesniffer": "^3.2"
    },
    "suggest": {
        "azine/mailgunwebhooks-bundle": "Allows to handle Mailgun event webhooks",
        "php-http/httplug-bundle": "To manage your http clients"
    },
    "autoload": {
        "psr-4": { "cspoo\\Swiftmailer\\MailgunBundle\\": "" }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-ci": "vendor/bin/phpunit --coverage-text --coverage-clover=build/coverage.xml"
    },
    "extra": {
        "thanks": {
            "name": "tehplague/swiftmailer-mailgun-bundle",
            "url": "https://github.com/tehplague/swiftmailer-mailgun-bundle"
        }
    },
    "config": {
      "optimize-autoloader": true,
      "preferred-install": {
          "*": "dist"
      },
      "sort-packages": true
    }
}
